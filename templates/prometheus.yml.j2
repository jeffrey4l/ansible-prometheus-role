---
global:
  scrape_interval: 60s
  evaluation_interval: 60s

rule_files:
  - {{ prometheus_etc_path }}/rules/*.yml
  - {{ prometheus_etc_path }}/rules/*.yaml

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets:
          - localhost:9090
  - job_name: node
    static_configs:
      - targets:
          - localhost:9100

